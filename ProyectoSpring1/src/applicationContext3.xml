<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">


<!-- Creacion de la dependencia que inyectamos via Constructor o Setter-->
<bean id="miInforme" class="arg.pildoras.IoC.Informe"></bean>

<bean id="miEmpleado" class="arg.pildoras.IoC.DirectorEmpleado"
	init-method="metodoInicial" destroy-method="metodoFinal">
	
	<constructor-arg ref="miInforme"></constructor-arg>
	
	
</bean>


</beans>